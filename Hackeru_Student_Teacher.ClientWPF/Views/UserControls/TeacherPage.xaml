<UserControl x:Class="Hackeru_Student_Teacher.ClientWPF.Views.UserControls.TeacherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hackeru_Student_Teacher.ClientWPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="399*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="45*" />
            <RowDefinition Height="315*"/>
        </Grid.RowDefinitions>

        <Label Foreground="black" Content="Teacher X" Grid.ColumnSpan="2" HorizontalAlignment="Left" FontSize="30" FontWeight="Medium" FontStyle="Italic"/>
        <!-- Need to put at 'UserName' the userName of the Teacher that is login -->
        <Label Foreground="black" Content="Hello (UserName)" Margin="0,0,90,0" Grid.ColumnSpan="2" HorizontalAlignment="Right" FontSize="15" FontWeight="bold" FontStyle="Oblique"/>
        <Button Name="Logout" Content="Logout" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="3" Grid.Column="1" Margin="0,0,0,47" Click="Logout_Click"/>
        <TextBlock Foreground="black" TextWrapping="Wrap" Text="Search for Exam:"  Grid.Row="1" FontSize="20" Grid.Column="1" FontWeight="Medium" />
        <ListBox Name ="ExamList" Grid.Row="1" Grid.Column="1" Margin="20,35,20,20" Grid.RowSpan="2" />

        <!-- Left StackPanel-->
        <StackPanel Grid.Row="2" HorizontalAlignment="Left">
            <Button Name="newExam" Content="Create New Exam" Margin="20" Width="150" Height="30" HorizontalAlignment="Left" BorderThickness="3" Click="newExam_Click" />
            <Button Name="editExam" Content="Edit Exams" Margin="20,50" Width="150" Height="30" HorizontalAlignment="Left" BorderThickness="3" Click="editExam_Click" />
        </StackPanel>

        <!-- Right StackPanel-->
        <StackPanel Grid.Row="2" HorizontalAlignment="right" >
            <Button Name="addQuestion" Content="Add new Question" Margin="20"  Width="150" Height="30" BorderThickness="3" Click="addQuestion_Click" />
            <Button Name="editQuestion" Content="Edit Questions" Margin="20,50" Width="150" Height="30" BorderThickness="3" Click="editQuestion_Click"   />
        </StackPanel>

        <!-- Bottom-->
        <Button Name="examStatistics" Content="Show Exams Statistics" Margin="10" Height="30"  Width="200" Grid.Row="2" VerticalAlignment="Bottom" BorderThickness="3" Click="examStatistics_Click" />


        <!-- Contentcontrol section-->
        <!--<ContentControl Name="LogOutContentTeacher" Grid.ColumnSpan="2"  Grid.RowSpan="3" ContextMenuOpening="LogOutContentTeacher_ContextMenuOpening" />-->

    </Grid>
</UserControl>
