<UserControl x:Class="Hackeru_Student_Teacher.ClientWPF.Views.UserControls.TeacherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hackeru_Student_Teacher.ClientWPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF376DF1" Offset="1"/>
                <GradientStop Color="AliceBlue"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="47*" />
            <RowDefinition Height="168*"/>
            <RowDefinition Height="62*"/>
        </Grid.RowDefinitions>

        <!-- Left window-->
        <Label Foreground="black" Content="Teacher Page" HorizontalAlignment="Left" FontSize="30" FontWeight="Medium" FontStyle="Italic"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" >
            <Button Name="newExam" Content="Create New Exam" Margin="20" Width="150" Height="30" BorderThickness="3" Click="newExam_Click" />
            <Button Name="editExam" Content="Edit Exams" Margin="20,50" Width="150" Height="30" BorderThickness="3" Click="editExam_Click" />
        </StackPanel>
        <Button Name="examStatistics" Content="Show Exams Statistics" Height="30" Grid.Row="4" VerticalAlignment="Center" BorderThickness="3" Click="examStatistics_Click" Margin="102,0,102,0" />

        <!-- Right window-->
        <!-- Need to put at 'UserName' the userName of the Teacher that is login.  And put the Label and Button on same row.-->
        <Label Content="Hello (UserName)" Margin="173,0,0,46" HorizontalAlignment="Left" FontSize="15" FontWeight="bold" FontStyle="Oblique" Grid.Column="1" Grid.RowSpan="2" Width="136"/>
        <Button Name="Logout" Content="Logout" Width="80" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" BorderThickness="3" Grid.Column="1" Margin="0,0,0,47" Click="Logout_Click"/>
        <TextBox Name="searchBox" Text="Search for Exam:"  Grid.Row="1" FontSize="15" Grid.Column="1" FontWeight="Medium" Height="37" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"  />
        <Button Content="Search" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Background="LightSteelBlue"  BorderThickness="0" Style="{DynamicResource MahApps.Styles.Button.Dialogs}" Click="SearchButton_Click"/>
        <ListBox Name ="ExamList" Grid.Row="2" Grid.Column="1" Grid.RowSpan="4" Margin="20" BorderBrush="DodgerBlue" BorderThickness="2"  />
        <Button Content="Refresh List" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" BorderThickness="1" Background="LightSteelBlue" Style="{DynamicResource MahApps.Styles.Button.Dialogs}" Click="ShowAllButton_Click" />


        <!-- Contentcontrol section-->
        <ContentControl Name="contentControl" Grid.ColumnSpan="2"  Grid.RowSpan="4"/>


    </Grid>
</UserControl>
